{
  "name": "playr",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist": "npm run build && electron-builder --win portable"
  },
  "dependencies": {
    "music-metadata": "^11.9.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.0",
    "electron-vite": "^3.0.0",
    "typescript": "^5.9.0",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^5.0.0"
  },
  "build": {
    "appId": "com.audioplayer.app",
    "productName": "Audioplayer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
